operation mint_asset(
  asset_id: byte_array,
  amount: integer,
  accounts: list<byte_array>?
) {
  originals_light.mint_asset(asset_id, amount, accounts);
}

operation register_asset(
  name: text,
  symbol: text,
  decimals: integer,
  blockchain_rid: byte_array,
  icon_url: text,
  type: text = ft_assets.ASSET_TYPE_FT4,
  attributes: list<(
    attribute_name: text,
    type: originals_light.attribute_type,
    attribute_value: byte_array
  )>?,
){
  originals_light.register_asset(
    name,
    symbol,
    decimals,
    blockchain_rid,
    icon_url,
    type,
    attributes
  );
}

operation register_and_mint_asset(
  name: text,
  symbol: text,
  decimals: integer,
  blockchain_rid: byte_array,
  icon_url: text,
  type: text = ft_assets.ASSET_TYPE_FT4,
  attributes: list<(
    attribute_name: text,
    type: originals_light.attribute_type,
    attribute_value: byte_array
  )>,
  interfaces: list<byte_array>?,
  accounts: list<byte_array>?,
  amount: integer
){
  val asset = originals_light.register_asset(
    name,
    symbol,
    decimals,
    blockchain_rid,
    icon_url,
    type,
    attributes
  );

  originals_light.mint_asset(
    asset.id,
    amount,
    accounts
  );
}

operation add_attribute_to_asset(
  asset_id: byte_array,
  attribute_name: text,
  type: originals_light.attribute_type,
  attribute_value: byte_array
){
  originals_light.add_attribute_to_asset(
    asset_id,
    attribute_name,
    type,
    attribute_value
  );
}

operation register_interface(
  name: text,
  attributes: list<(
    attribute_name: text,
    type: originals_light.attribute_type
  )>
){
  originals_light.register_interface(
    name,
    attributes
  );
}


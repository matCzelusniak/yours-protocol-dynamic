operation update_attribute(
  asset_id: byte_array,
  attribute_name: text,
  attribute_value: byte_array
) {
  val asset = ft_assets.get_asset(asset_id);
  ft_assets.require_asset_owner(asset);
  val attribute = ft_assets.get_attribute(asset, attribute_name);
  ft_assets.update_attribute(attribute, attribute_value);
}

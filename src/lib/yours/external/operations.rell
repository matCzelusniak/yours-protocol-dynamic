operation mint_token(
  asset_id: byte_array,
  amount: integer,
  accounts: list<byte_array>?
) {
  yours.mint_token(asset_id, amount, accounts);
}

operation register_asset(
  name: text,
  symbol: text,
  decimals: integer,
  blockchain_rid: byte_array,
  icon_url: text,
  type: text = ft_assets.ASSET_TYPE_FT4,
  attributes: list<(
    attribute_name: text,
    type: yours.attribute_type,
    attribute_value: byte_array
  )>?
){
  yours.register_asset(
    name,
    symbol,
    decimals,
    blockchain_rid,
    icon_url,
    type,
    attributes
  );
}

operation register_and_mint_token(
  name: text,
  symbol: text,
  decimals: integer,
  blockchain_rid: byte_array,
  icon_url: text,
  type: text = ft_assets.ASSET_TYPE_FT4,
  attributes: list<(
    attribute_name: text,
    type: yours.attribute_type,
    attribute_value: byte_array
  )>,
  accounts: list<byte_array>?,
  amount: integer
){
  val asset = yours.register_asset(
    name,
    symbol,
    decimals,
    blockchain_rid,
    icon_url,
    type,
    attributes
  );

  yours.mint_token(
    asset.id,
    amount,
    accounts
  );
}


